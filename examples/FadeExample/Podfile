
target 'FadeExample' do
	platform :ios, '10.0'
	use_frameworks!

	pod 'Alamofire', '~> 5.0'
	pod 'Promissum', :path => '../../'
	pod 'Promissum/Alamofire', :path => '../../'
	pod 'Promissum/UIKit', :path => '../../'

end

target 'FadeExampleWatchOS Extension' do
	platform :watchos, '3.0'
	use_frameworks!
	
	pod 'Alamofire', '~> 5.0'
	pod 'Promissum/Alamofire', :path => '../../'
	pod 'Promissum', :path => '../../'
end
